@model eTicaretProjesi.ENT.ViewModel.KategorilerViewModel.KategoriViewModel

@{
    ViewBag.Title = "KategoriDetay";
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
}

<h2>KategoriDetay</h2>

<div>
    <h4>Kategoriler</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.KategoriAd)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Kategoriler.KategoriAD)
        </dd>

        <dt>
            Alt Kategoriler
        </dt>
        <dd>
            @Html.DropDownListFor(model => model.AltK, (List<SelectListItem>)ViewBag.AltKDetay, new { @class = "form-control" })
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Güncelle", "KategoriGuncelle", new { id = Model.KategoriID }) |
    @Html.ActionLink("Listeye Geri Dön", "KategoriListele")
</p>
