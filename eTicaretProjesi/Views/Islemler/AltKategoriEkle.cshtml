@model eTicaretProjesi.ENT.ViewModel.KategorilerViewModel.AltKategoriViewModel

@{
    ViewBag.Title = "AltKategoriEkle";
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
}

<h2>AltKategoriEkle</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>KategoriAlt</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

          <div class="form-group">
                @Html.LabelFor(x => x.Kategoriler.KategoriID, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.Kategoriler.KategoriID, (List<SelectListItem>)ViewBag.KategoriDD, new { @class = "form-control" })
                </div>
            </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AltKategoriAd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AltKategoriAd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AltKategoriAd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
