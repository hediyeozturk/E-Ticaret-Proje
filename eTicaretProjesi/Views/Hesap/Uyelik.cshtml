@model eTicaretProjesi.ENT.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "Uyelik";
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
}

<h2>Uyelik</h2>

<!-- register -->
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="panel">
            <div class="text-center text-danger">@Html.ValidationSummary()</div>
        </div>
    </div>
    <div class="col-md-offset-3 col-md-6">
        @using (Html.BeginForm("Uyelik", "Hesap", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.Ad)
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Ad" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Soyad)
                @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", placeholder = "Soyad" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.KullaniciAd)
                @Html.TextBoxFor(x => x.KullaniciAd, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-Mail" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Sifre)
                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", placeholder = "Şifre", type = "password" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.SifreOnay)
                @Html.TextBoxFor(x => x.SifreOnay, new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password" })
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <input type="submit" value="Kayıt Ol" class="btn btn-block btn-success" />

                    @Html.ActionLink("Üye iseniz", "Login", "Account", new { @class = "btn btn-info btn-block" })<br />
                </div>
            </div>
        }
    </div>
</div>
<!-- //register -->